[oploc1,building_steps_up]
if (loc_angle = 1) {
    p_teleport(movecoord(loc_coord, 0, 0, 1));
} else if (loc_angle = 2) {
    p_teleport(movecoord(loc_coord, 1, 0, 0));
} else {
    mes("unhandled loc angle <tostring(loc_angle)>");
}

[oploc1,building_steps_down]
if (loc_angle = 1) {
    p_teleport(movecoord(loc_coord, 0, 0, -2));
} else if (loc_angle = 2) {
    p_teleport(movecoord(loc_coord, -2, 0, 0));
} else {
    mes("unhandled loc angle <tostring(loc_angle)>");
}
